<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <HBox alignment="center"  GridPane.columnIndex="3" GridPane.rowIndex="0" >
        <Button fx:id="button" alignment="center" onAction="#startCamera" text="Start Camera" />
        <Button fx:id="saveBackgroundImage" alignment="center" onAction="#saveBackgroundImage" text="Save background image" />
    </HBox>

    <ImageView fx:id="image1" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ImageView fx:id="image2" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <ImageView fx:id="image3"  GridPane.columnIndex="0" GridPane.rowIndex="1"/>



    <Label fx:id="histogramCompareResult"  GridPane.columnIndex="0" GridPane.rowIndex="2"/>



</GridPane>